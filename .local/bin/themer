#!/usr/bin/env bash

source ~/.session

declare -a themes=(
"Dracula"
"Gruvbox"
"Monokai-Pro"
"Nord"
"TokyoNight"
"Quit"
)

choice=$(printf '%s\n' "${themes[@]}" | /home/nova/.config/rofi/menu.sh)
if [[ -f "~/.theme" ]]; then
    rm ~/.theme
fi

touch ~/.theme
echo "theme=$choice" > ~/.theme

alathemer
nvimthemer
polythemer
rofithemer
walltheme

case $SESSION in
    awesome)
        awmthemer
        echo 'awesome.restart()' | awesome-client
    ;;
    *)
        echo "Done, now restart your WM"
    ;;
esac
