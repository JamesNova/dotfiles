#!/usr/bin/env bash

source ~/.session

declare -a themes=(
"Dracula"
"Gruvbox"
"Monokai-Pro"
"Nord"
"TokyoNight"
"Quit"
)

choice=$(printf '%s\n' "${themes[@]}" | /home/nova/.config/rofi/menu.sh)
if [[ -f "~/.theme" ]]; then
    cp ~/.theme ~/.theme.bak
    rm ~/.theme
fi

touch ~/.theme

case $choice in
    Dracula)
    echo "theme=$choice" > ~/.theme
    ;;
    Gruvbox)
    echo "theme=$choice" > ~/.theme
    ;;
    Monokai-Pro)
    echo "theme=$choice" > ~/.theme
    ;;
    Nord)
    echo "theme=$choice" > ~/.theme
    ;;
    TokyoNight)
    echo "theme=$choice" > ~/.theme
    ;;
    *)
        if [[ -f "~/.theme" ]]; then
            mv ~/.theme.bak ~/.theme
            exit 1
        else
            exit 1
        fi
    ;;
esac

alathemer
kittythemer
nvimthemer
polythemer
rofithemer
walltheme

case $SESSION in
    awesome)
        awmthemer
        echo 'awesome.restart()' | awesome-client
    ;;
    *)
        echo "Done, now restart your WM"
    ;;
esac
